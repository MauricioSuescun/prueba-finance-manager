generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  phone     String?
  role      String   @default("ADMIN")
  movements Movement[]
}

model Movement {
  id        String   @id @default(cuid())
  concept   String
  amount    Float
  date      DateTime
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
